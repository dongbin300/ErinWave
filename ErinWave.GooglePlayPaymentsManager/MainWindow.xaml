<Window x:Class="ErinWave.GooglePlayPaymentsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErinWave.GooglePlayPaymentsManager"
        mc:Ignorable="d"
        Title="Google Play 결제 내역 관리자" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" Background="#4285F4" Padding="15" CornerRadius="5" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/7/78/Google_Play_Store_badge_EN.svg/1200px-Google_Play_Store_badge_EN.svg.png"
                       Width="40" Height="40" Margin="0,0,15,0"/>
                <TextBlock Text="Google Play 결제 내역" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 컨트롤 패널 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="LoadButton" Content="파일에서 불러오기" Padding="15,8" Margin="0,0,10,0"
                    Background="#34A853" Foreground="White" BorderThickness="0" FontWeight="Bold"
                    Click="LoadButton_Click"/>
            <Button x:Name="RefreshButton" Content="새로고침" Padding="15,8" Margin="0,0,10,0"
                    Background="#FBBC04" Foreground="Black" BorderThickness="0" FontWeight="Bold"
                    Click="RefreshButton_Click"/>
            <Button x:Name="StatisticsButton" Content="📊 통계 보기" Padding="15,8" Margin="0,0,10,0"
                    Background="#4285F4" Foreground="White" BorderThickness="0" FontWeight="Bold"
                    Click="StatisticsButton_Click"/>
            <TextBlock x:Name="StatusText" Text="준비됨" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="14"/>
        </StackPanel>

        <!-- 데이터 그리드 -->
        <DataGrid x:Name="PaymentsDataGrid" Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#E0E0E0"
                  AlternatingRowBackground="#F8F9FA"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  FontSize="14">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="이미지" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageUrl}" Width="40" Height="40" Stretch="UniformToFill">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.3"/>
                                </Image.Effect>
                            </Image>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="상점" Binding="{Binding Store}" Width="120" IsReadOnly="True"/>

                <DataGridTextColumn Header="날짜 및 상품명" Binding="{Binding DisplayText}" Width="400" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="금액" Binding="{Binding AmountDisplay}" Width="120" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Amount}" Value="0">
                                    <Setter Property="Foreground" Value="Gray"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Amount}" Value="{x:Null}">
                                    <Setter Property="Foreground" Value="Gray"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 요약 정보 -->
        <Border Grid.Row="3" Background="#F1F3F4" Padding="15" CornerRadius="5" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="총 결제 건수:" FontWeight="Bold" FontSize="12" Foreground="#5F6368"/>
                    <TextBlock x:Name="TotalCountText" Text="0건" FontSize="16" FontWeight="Bold" Foreground="#202124"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="총 지출액:" FontWeight="Bold" FontSize="12" Foreground="#5F6368"/>
                    <TextBlock x:Name="TotalAmountText" Text="₩0" FontSize="16" FontWeight="Bold" Foreground="#EA4335"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="평균 결제액:" FontWeight="Bold" FontSize="12" Foreground="#5F6368"/>
                    <TextBlock x:Name="AverageAmountText" Text="₩0" FontSize="16" FontWeight="Bold" Foreground="#34A853"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
