<Window x:Class="ErinWave.NeuroExposePcSound.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErinWave.NeuroExposePcSound"
        mc:Ignorable="d"
        Title="Volume Control App" Height="200" Width="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="미세노출 훈련 볼륨 제어" Margin="10" FontWeight="Bold" FontSize="16"/>
        <Button Content="훈련 시작" 
                Name="StartButton"
                Click="StartButton_Click" 
                Margin="5" Padding="10"/>
        <Button Content="훈련 중지" 
                Name="StopButton"
                Click="StopButton_Click" 
                Margin="5" Padding="10" 
                IsEnabled="False"/>
    </StackPanel>
</Window>
