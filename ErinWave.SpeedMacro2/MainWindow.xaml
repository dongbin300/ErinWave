                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="KeyTextBox1" Grid.Column="0"/>
                                <Button x:Name="PressButton1" Grid.Column="1" Content="입력"/>
                                <CheckBox x:Name="FastInputCheckBox1" Grid.Column="2" Content="빠른 입력"/>
                            </Grid>
